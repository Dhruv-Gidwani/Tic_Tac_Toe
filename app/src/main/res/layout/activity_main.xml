    </TableRow>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_game"
            android:backgroundTint="#C40233"
            android:layout_marginTop="20dp"/>


</TableLayout>